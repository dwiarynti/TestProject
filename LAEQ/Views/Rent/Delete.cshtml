@using LAEQ.ViewModel
@model ViewRent
@{
    ViewBag.Title = "Delete";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <br />
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <h4 class="marginleft">Delete Rents</h4>
                <hr />
                <div class="panel-body">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <h4 class="control-label col-md-5">Are you sure you want to delete this?</h4>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MachineId, "Machine Id", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.Machine</p>
                        </div>
                        @Html.HiddenFor(model => model.Id)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CustomerName, "Customer", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.CustomerName</p>
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Delete" class="btn background-docker" />
                            <input type="button" value="Cancel" class="btn background-docker" onclick="window.location.href='@Url.Action("Details","Rent" , new { id = Model.Id })'" />
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>

}


