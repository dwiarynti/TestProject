@using LAEQ.ViewModel
@model ViewCustomer
@{
    ViewBag.Title = "Details";
}



    <br />
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <h4 class="marginleft">Customer Details</h4>
                <hr />
                <div class="panel-body">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Type, "Customer Type", htmlAttributes: new { @class = "control-label col-md-4 " })
                                <div class="col-md-8">
                                    <p class="form-control-static">@Model.Type</p>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    <p class="form-control-static">@Model.Name</p>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Address1, htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    <p class="form-control-static">@Model.Address1</p>
                                </div>
                            </div>

                            <div class="form-group text-left">
                                @Html.LabelFor(model => model.Address2, htmlAttributes: new { @class = "control-label text-left col-md-4" })
                                <div class="col-md-8">
                                   @if (Model.Address2 != null)
                                   {
                                    <p class="form-control-static">@Model.Address2</p>
                                   }
                                   else
                                   {
                                    <p class="form-control-static"> - </p>
                                   }
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Website, htmlAttributes: new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @if (Model.Website != null)
                                    {
                                        <p class="form-control-static">@Model.Website</p>
                                    }
                                    else
                                    {
                                        <p class="form-control-static"> - </p>
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-4 col-md-10">
                                    <input type="button" value="Edit" class="btn background-docker" onclick="window.location.href='@Url.Action("Edit","Customer", new { id = Model.Id })'" />
                                    <input type="button" value="Delete" class="btn background-docker" onclick="window.location.href='@Url.Action("Delete","Customer", new { id = Model.Id })'" />
                                </div>
                            </div>
                        </div>
                       
                    </div>
                   


                  
                </div>
                <hr />
                <h4 class="marginleft">Customer Contact : <input type="button" value="Create " class="btn background-docker" onclick="window.location.href='@Url.Action("CreateContact","Customer", new { id = Model.Id })'" /> </h4>
                
                <div class="panel-body">
                    <table class="table table-bordered table-responsive">
                        <thead class="background-docker">
                            <tr>
                                <th ><p>Name</p></th>
                                <th ><p>Job Position</p></th>
                                <th ><p>Email</p></th>
                                <th ><p>Phone</p></th>
                                <th ><p>Mobile</p></th>
                                <th ><p>Notes</p></th>
                                <th><p>Action</p></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.CustomerContact.Count != 0)
                            {
                                foreach (var item in Model.CustomerContact)
                                {
                                    <tr>
                                        <td>@Html.ActionLink((string)item.Title +"-"+ item.ContactName ,"EditContact" , new { id = item.Id }) </td>
                                        <td> @item.JobPosition </td>
                                        <td> @item.Email </td>
                                        <td> @item.Phone </td>
                                        <td> @item.Mobile </td>
                                        <td> @item.Notes </td>
                                        <td><input type="button" value="Delete" class="btn background-docker" onclick="window.location.href='@Url.Action("DeleteContact","Customer", new { id = item.Id })'" /></td>
                                </tr>
                                }
                            }
                            else
                            {
                                <tr class="text-center">

                                
                                    <td colspan="7" class="text-center">No data available in table</td>

                                
                                </tr>
                            }


                        </tbody>
                    </table>
                 </div>
                </div>
        </div>
    </div>

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


