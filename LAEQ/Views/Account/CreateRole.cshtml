
@{
    ViewBag.Title = "CreateRole";
}
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <h4 class="marginleft">Create Role</h4>
                <hr />
                <div class="panel-body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.Label("Role Name", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.Editor("RoleName", new { htmlAttributes = new { @class = "form-control", placeholder = "Role Name" } })

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                            <input type="button" value="Cancel" class="btn btn-default" onclick="window.location.href='@Url.Action("Roles","Account")'" />
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
}


