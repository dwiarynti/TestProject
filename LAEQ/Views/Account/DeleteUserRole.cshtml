@using LAEQ.ViewModel
@model ViewUser
@{
    ViewBag.Title = "DeleteUserRole";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <br />
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <h4 class="marginleft">Delete User Role</h4>
                <hr />
                <div class="panel-body">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <h4 class="control-label col-md-5">Are you sure you want to delete role from this user?</h4>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Username, "Role Name", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            <p class="form-control-static">@Model.Username</p>
                        </div>
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.Username)
                      
                    </div>
                    @{ string datanull = "-";}
                    <div class="form-group">
                        @Html.LabelFor(model => model.roleNames, "Role Name", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-sm-10">
                            @if (Model.roleNames.Count > 0)
                            {
                                foreach (var rolename in Model.roleNames)
                                {
                                    <p class="form-control-static">@rolename</p>
                                   
                                }
                            }
                            else
                            {
                                <p class="form-control-static">@datanull</p>
                            }
                        </div>
                      
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Delete" class="btn background-docker" />
                            <input type="button" value="Cancel" class="btn background-docker" onclick="window.location.href='@Url.Action("ListUser","Account" , new { id = Model.Id })'" />
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>

}



